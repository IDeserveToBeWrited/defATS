traffic_vehicle : traffic.garbage_trck
{
	accessories[]: .garbage_trck.chassis
	accessories[]: .garbage_trck.fwheel
	accessories[]: .garbage_trck.rwheel
	accessories[]: .garbage_trck.rwheel2

	max_speed: 90

	tags[]: urban
	tags[]: garbage_trck
	tags[]: context

	license_plate_type: truck_city

	sound_move[]: "/sound/traffic/car_normal_1.soundref"
	sound_move[]: "/sound/traffic/car_normal_2.soundref"
	sound_horn[]: "/sound/traffic/car_horn_3.soundref"

	vehicle_mass: 1700

@include "drivers_generic.sui"

	spawn_condition[]: .traffic.garbage_trck.spawn.condition
	spawn_condition[]: .traffic.garbage_trck.spawn.condition2
}
traffic_spawn_condition: .traffic.garbage_trck.spawn.condition
{
	type: area
	str_param[]: "urban" # spawn inside cities
}
traffic_spawn_condition: .traffic.garbage_trck.spawn.condition2
{
	type: area
	str_param[]: "!"
	str_param[]: "company" # don't spawn inside companies
	str_param[]: "dealer" # don't spawn inside truck dealers
}

vehicle_accessory: .garbage_trck.chassis
{
	data_path: "/def/vehicle/ai/garbage_truck/chassis.sii"
}

vehicle_wheel_accessory: .garbage_trck.fwheel
{
	offset: 0
	data_path: "/def/vehicle/f_wheel/chrome.sii"
}

vehicle_wheel_accessory: .garbage_trck.rwheel
{
	offset: 0
	data_path: "/def/vehicle/r_wheel/chrome.sii"
}

vehicle_wheel_accessory: .garbage_trck.rwheel2
{
	offset: 2
	data_path: "/def/vehicle/r_wheel/chrome.sii"
}

