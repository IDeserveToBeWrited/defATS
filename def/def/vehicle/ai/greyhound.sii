traffic_vehicle : traffic.greyhound
{
	accessories[]: .greyhound.chassis
	accessories[]: .greyhound.fwheel
	accessories[]: .greyhound.rwheel
	accessories[]: .greyhound.rwheel2

	max_speed: 100

	lod_dist[]: 70
	lod_dist[]: 110
	allow_parked: false
	
	vehicle_mass: 25000
	engine_torque: 2000

@include "drivers_generic.sui"

}

vehicle_accessory: .greyhound.chassis
{
	data_path: "/def/vehicle/ai/greyhound/chassis.sii"
}

vehicle_wheel_accessory: .greyhound.fwheel
{
	offset: 0
	data_path: "/def/vehicle/f_wheel/steel.sii"
}

vehicle_wheel_accessory: .greyhound.rwheel
{
	offset: 0
	data_path: "/def/vehicle/t_wheel/front.sii"
}

vehicle_wheel_accessory: .greyhound.rwheel2
{
	offset: 2
	data_path: "/def/vehicle/r_wheel/steel.sii"
}

