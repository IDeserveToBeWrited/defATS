	defaults[]: "/def/vehicle/trailer_owned/scs.dropdeck/accessory/r_bumper/dropdeck_standard.sii"

	#xxxxxxxxxxxxxxxx new cargo system xxxxxxxxxxxxxxxxx

	cargo_loading_methods[]: area
	cargo_loading_methods[]: custom

	cargo_regular_width: 2.4

	cargo_areas[]: (2.40, 10.83349)
	cargo_areas[]: (2.40, 3.67382)

	cargo_custom_loads_path: "/def/vehicle/cargo_custom_loads/scs_dropdeck/short"	

