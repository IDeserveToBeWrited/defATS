accessory_trailer_body_data : dropdek_48al.scs.dropdeck.body
{
	name: "@@bs_dropdeck_alu@@"
	price: 8000
	unlock: 10
	icon: "trailer_owned/scs_dropdeck/body/dropdeck_48_al"

	# 48' x 102" x 13'6" (cargo height 120")

	size: (2.5908, 3.048, 14.6304)		# width, height, length (internal size of the body)
	total_size: (2.5908, 4.1148, 14.6304)	# width, height, length (size of the body + chassis)

	volume: 102		# 3600 cft
	body_type: dropdeck

	# Mass of the cargo container in KG.
	#
	# Base mass for flatbed trailer is in chassis, bodies have only deltas to flatbed body mass.
	# Thus flatbed has like 0 while curtain 1000
	# Shorter body variants have smaller delta (count as x0.9, x0.85, x0.55, x0.5)

	mass: 0

	# visual data

	#detail_model: "/vehicle/trailer_owned/scs_dropdeck/body/dropdeck_48_al.pmd"
	model: "/vehicle/trailer_owned/scs_dropdeck/body/dropdeck_48_al.pmd"
