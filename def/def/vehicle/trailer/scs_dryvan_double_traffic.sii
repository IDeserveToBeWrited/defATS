traffic_trailer : traffic.trailer.scs_double
{
	accessories[]: .scs_double.chassis
	accessories[]: .scs_double.rwheel
	accessories[]: .scs_double.paint_job

	company_paint_job: true
	
	slave_trailer: .scs_double.dolly
}

vehicle_accessory: .scs_double.chassis
{
	data_path: "/def/vehicle/trailer/scs_box/dry_28_hook.sii"
}

vehicle_wheel_accessory: .scs_double.rwheel
{
	offset: 0
	data_path: "/def/vehicle/t_wheel/single.sii"
}

vehicle_paint_job_accessory: .scs_double.paint_job
{
	data_path: "/def/vehicle/trailer/scs_box/company_paint_job/default.sii"
}

# XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX  DOLLY XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

