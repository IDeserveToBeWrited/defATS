{
	accessories[]: .scs_double.dolly.chassis
	accessories[]: .scs_double.dolly.rwheel

	slave_trailer: .scs_double.second
}

vehicle_accessory: .scs_double.dolly.chassis
{
	data_path: "/def/vehicle/trailer/scs_box/dolly_c.sii"
}

