SiiNunit
{
# Fallback slave trailer used in case trailer data is missing to prevent crashes.

trailer : .fallback.trailer.slave
{
	accessories[]: .fallback.trailer.slave.chassis
	accessories[]: .fallback.trailer.slave.rwheel
	accessories[]: .fallback.trailer.slave.paint_job
}

vehicle_accessory: .fallback.trailer.slave.chassis
{
	data_path: "/def/vehicle/trailer/scs_flatbed/curtain28.sii"
}

vehicle_wheel_accessory: .fallback.trailer.slave.rwheel
{
	offset: 0
	data_path: "/def/vehicle/t_wheel/single.sii"
}

vehicle_paint_job_accessory: .fallback.trailer.slave.paint_job
{
	data_path: "/def/vehicle/trailer/scs_flatbed/company_paint_job/black.sii"
}

}
