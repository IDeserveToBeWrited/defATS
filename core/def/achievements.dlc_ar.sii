# Discover at least 8 cities in Arkansas.

achievement_visit_city_data : .achievement.ar_visit_cit
{
	event_name: city_visited
	initial_check: true
	cities[]: el_dorado
	cities[]: fayetteville
	cities[]: fort_smith
	cities[]: harrison
	cities[]: hot_springs
	cities[]: jonesboro
	cities[]: little_rock
	cities[]: pine_bluff
	cities[]: springdale
	cities[]: texarkana_ar
	target: 8

	achievement_name: ar_visit_cities

	steam_progress_id: "ar_visit_cities-progress"
	steam_id: ar_visit_cities
}

# View cutscenes from at least 8 viewpoints in Arkansas.

achievement_trigger_data : .achievement.ar_cutscenes
{
	event_name: trig_activat
	initial_check: true
	trigger_param: ar_cutscenes
	target: 8

	achievement_name: ar_cutscenes

	steam_progress_id: "ar_cutscenes-progress"
	steam_id: ar_cutscenes
}

# Complete 3 deliveries of Logs to Chuck & Jack's, and 3 deliveries of Wood Shavings to Page & Price Paper, within Arkansas.

achievement_delivery : .achievement.ar_paper
{
	event_name: job_done
	initial_check: true
	condition: .ar_paper.condition
	target: 6

	achievement_name: ar_paper

	steam_progress_id: "ar_paper-progress"
	steam_id: ar_paper
}

achievement_delivery_sequence : .ar_paper.condition
{
	list[]: .ar_paper.ch_wd_saw
	list[]: .ar_paper.pnp_wd_pln
}

achievement_delivery_count : .ar_paper.ch_wd_saw
{
	condition: .ar_paper.ch_wd_saw.count
	count: 3
}

achievement_delivery_each : .ar_paper.ch_wd_saw.count
{
	list[]: .ar_paper.ch_wd_saw.source
	list[]: .ar_paper.ch_wd_saw.target
	list[]: .ar_paper.ch_wd_saw.cargo
}

achievement_delivery_point_country : .ar_paper.ch_wd_saw.source
{
	role: source
	country_name: arkansas
}

achievement_delivery_company : .ar_paper.ch_wd_saw.target
{
	role: target
	company_name: ch_wd_saw
	country_name: arkansas
}

achievement_delivery_cargo : .ar_paper.ch_wd_saw.cargo
{
	cargo_name: logs
}

achievement_delivery_count : .ar_paper.pnp_wd_pln
{
	condition: .ar_paper.pnp_wd_pln.count
	count: 3
}

achievement_delivery_each : .ar_paper.pnp_wd_pln.count
{
	list[]: .ar_paper.pnp_wd_pln.source
	list[]: .ar_paper.pnp_wd_pln.target
	list[]: .ar_paper.pnp_wd_pln.cargo
}

achievement_delivery_point_country : .ar_paper.pnp_wd_pln.source
{
	role: source
	country_name: arkansas
}

achievement_delivery_company : .ar_paper.pnp_wd_pln.target
{
	role: target
	company_name: pnp_wd_pln
	country_name: arkansas
}

achievement_delivery_cargo : .ar_paper.pnp_wd_pln.cargo
{
	cargo_name: wshavings
}

