	initial_check: true
	targets[]: dw_air_pln.everett

	achievement_name: wa_aerospace

	steam_id: wa_aerospace
}

# Deliver a boat to a marina in Washington.

achievement_deliver_cargo_data : .achievement.wa_marina
{
	event_name: job_done
	initial_check: true
	cargo: boat
	targets[]: sh_shp_mar.aberdeen_wa
	targets[]: sh_shp_mar.colville
	targets[]: sh_shp_mar.olympia
	targets[]: sh_shp_mar.port_angeles

	achievement_name: wa_marina

	steam_id: wa_marina
