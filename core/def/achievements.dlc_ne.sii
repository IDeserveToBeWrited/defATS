# Discover at least 10 cities in Nebraska.

achievement_visit_city_data : .achievement.ne_visit_cit
{
	event_name: city_visited
	initial_check: true
	cities[]: alliance
	cities[]: chadron
	cities[]: columbus
	cities[]: grand_island
	cities[]: lincoln
	cities[]: mccook
	cities[]: norfolk
	cities[]: north_platte
	cities[]: omaha
	cities[]: scottsbluff
	cities[]: sidney_ne
	cities[]: valentine
	target: 10

	achievement_name: ne_visit_cities

	steam_progress_id: "ne_visit_cities-progress"
	steam_id: ne_visit_cities
}

# View cutscenes from at least 6 viewpoints in Nebraska.

achievement_trigger_data : .achievement.ne_cutscenes
{
	event_name: trig_activat
	initial_check: true
	trigger_param: ne_cutscenes
	target: 6

	achievement_name: ne_cutscenes

	steam_progress_id: "ne_cutscenes-progress"
	steam_id: ne_cutscenes
}

# Complete 3 deliveries from the Utility Vehicle Factory in Lincoln to each of the RV dealers in Omaha, Norfolk, and Columbus.

achievement_delivery : .achievement.ne_out_car_p
{
	event_name: job_done
	initial_check: true
	condition: .ne_out_car_p.condition
	target: 3

	achievement_name: ne_out_car_pln

	steam_progress_id: "ne_out_car_pln-progress"
	steam_id: ne_out_car_pln
}

achievement_delivery_sequence : .ne_out_car_p.condition
{
	list[]: .ne_out_car_p.columbus
	list[]: .ne_out_car_p.norfolk
	list[]: .ne_out_car_p.omaha
}

achievement_delivery_each : .ne_out_car_p.columbus
{
	list[]: .ne_out_car_p.columbus.source
	list[]: .ne_out_car_p.columbus.target
}

