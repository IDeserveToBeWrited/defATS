	initial_check: true
	cities[]: alamosa
	cities[]: burlington
	cities[]: colorado_spr
	cities[]: denver
	cities[]: durango
	cities[]: fort_collins
	cities[]: grand_juncti
	cities[]: lamar
	cities[]: montrose
	cities[]: pueblo
	cities[]: rangely
	cities[]: steamboat_sp
	cities[]: sterling
	target: 10

	achievement_name: co_visit_cities

	steam_progress_id: "co_visit_cities-progress"
	steam_id: co_visit_cities
}

# Drive along this famously scenic and thrilling section of the U.S. 550 in Colorado.

