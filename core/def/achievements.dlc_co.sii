{
	event_name: job_done
	initial_check: true
	condition: .co_wind_turb.condition
	target: 2

	achievement_name: co_wind_turbine

	steam_progress_id: "co_wind_turbine-progress"
	steam_id: co_wind_turbine
}

achievement_delivery_sequence : .co_wind_turb.condition
{
	list[]: .co_wind_turb.windml_eng
	list[]: .co_wind_turb.windml_tube
}

