{
	event_name: job_done
	initial_check: true
	condition: .ks_salt_food.condition
	target: 6

	achievement_name: ks_salt_food

	steam_progress_id: "ks_salt_food-progress"
	steam_id: ks_salt_food
}

achievement_delivery_sequence : .ks_salt_food.condition
{
	list[]: .ks_salt_food.factory
	list[]: .ks_salt_food.other
}

