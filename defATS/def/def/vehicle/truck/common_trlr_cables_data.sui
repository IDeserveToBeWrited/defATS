# Common truck sounds data.
# Units have to be defined with same names as in "common_trlr_cables_data.sui".

# NOTE: This is only definition of cables that should be included beside of "accessory_addon_trailer_cables_data" unit.

trailer_cable_data : .air_cable_b
{
	locator_prefix: air_cable_b
	rest_locator_prefix: rst_cable_b

	vehicle_plug_model: "/vehicle/share/models/cables_connectors/air_socket_b.pmd"
	vehicle_plug_model_offset: (0.0, 0.0, -0.11)
	trailer_plug_model: "/vehicle/share/models/cables_connectors/air_plug_b.pmd"
	trailer_plug_model_offset: (-0.0205, 0.0, -0.121)

	color: (0.1, 0.35, 0.55)
}

